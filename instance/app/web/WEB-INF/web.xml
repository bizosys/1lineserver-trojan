<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>System Utils</display-name>
	<description></description>
	
	<servlet>
		<servlet-name>ShutdownServlet</servlet-name>
		<servlet-class>com.bizosys.oneline.server.ShutdownServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>EmailServlet</servlet-name>
		<servlet-class>com.bizosys.oneline.server.EmailServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
	</servlet>

	 <servlet-mapping>
        <servlet-name>ShutdownServlet</servlet-name>
        <url-pattern>/shutdown.html/*</url-pattern>
    </servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>EmailServlet</servlet-name>
        <url-pattern>/email.html/*</url-pattern>
    </servlet-mapping>
</web-app>
